
#include <iostream> 
using namespace std; 

class demo{
    private:
        static int next_sr_no;
        int sr_no;
    public:
    
        demo(){
            sr_no=next_sr_no;
            next_sr_no++;
        }
        
        void display(){
            cout<<sr_no<<endl;
        }
};

int demo::next_sr_no=1;

int main(){
  
#include <iostream> 
using namespace std; 

class demo{
    private:
        static int next_sr_no;
        int sr_no;
    public:
    
        demo(){
            sr_no=next_sr_no;
            next_sr_no++;
        }
        
        void display(){
            cout<<sr_no<<endl;
        }
};

int demo::next_sr_no=1;

int main(){
    int i,n;
    cout<<"Enter the no. of Objects: ";
    cin>>n;
    
    demo* object=new demo[n];
    
    for(i=0;i<n;i++){
        cout<<"Object "<<i+1<<" serial no. is:";
        object[i].display();
    }
  
     return 0;
}
    
    
    
     return 0;
}
